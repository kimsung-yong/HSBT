    <select id="getListWithPaging" resultType="domain.BoardVO">
        <![CDATA[
            select b_no,b_title,b_content,u_id,b_regtime,b_updatetime from (
            select /*+index_desc(tbl_board pk_board) */
            rownum rn , b_no,b_title,b_content,u_id,b_regtime,b_updatetime from tbl_board
            where rownum <= #{pageNum} * #{amount}
            )
            where rn >(#{pageNum} -1) * #{amount}
        ]]>
    </select>
    <select id="getCount" resultType="int">
        select count(*) from tbl_board
    </select>
    <select id="getListSelect" resultType="domain.BoardVO">
        select * from tbl_board where b_no = #{b_no}
    </select>

    <insert id="insert">
        insert into tbl_board(b_no,b_title,b_content,u_id) values(board_seq.nextval,#{b_title},#{b_content},#{u_id})
    </insert>
    <insert id="insertSelectkey">
        <selectKey keyProperty="b_no" order="BEFORE" resultType="long">
            select board_seq.nextval from dual
        </selectKey>
        insert into tbl_board(b_no,b_title,b_content,u_id) values(#{b_no},#{b_title},#{b_content},#{u_id})
    </insert>
    <update id="update">
        update tbl_board set b_title =#{b_title},b_content=#{b_content} where b_no = #{b_no}
    </update>
    <delete id="delete">
        delete from tbl_board where b_no = #{b_no}
    </delete>


</mapper>