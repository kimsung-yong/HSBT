        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReviewMapper">

    <select id="getList" resultType="domain.ReviewVO">
		<![CDATA[
		select * from tbl_review where r_no >= 0
		]]>
	</select>
