<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReviewMapper">


	<select id="getList" resultType="domain.ReviewVO">
      <![CDATA[
       select * from tbl_review
       where r_no >0
      ]]>
   </select>



	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							r_title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							r_content like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							id like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	
    <select id="getListWithPaging" resultType="domain.ReviewVO">
      <![CDATA[
       select
          r_no,r_title,r_content,id,r_regtime,r_updatetime
       from
          (
             select  /*+INDEX_DESC(tbl_review pk_review)*/
             rownum rn, r_no, r_title, r_content, id, r_regtime, r_updatetime
             from tbl_review
             where
       ]]>
		<include refid="criteria"></include>
		<![CDATA[
			rownum <= #{pageNum} * #{amount}
			)
			where rn > (#{pageNum}-1) * #{amount}
		]]>
       </select>

	<select id="getTotalCount" resultType="int">
       select   count (*)    from   tbl_review
       where
		<include refid="criteria"></include>
		r_no>0

	</select>





	<insert id="insert">
      insert into tbl_review( r_no,r_title,r_content,id)
      values(review_seq.nextval,#{r_title},#{r_content},#{id})
   </insert>

	<insert id="insertSelectKey">
		<selectKey keyProperty="r_no" order="BEFORE" resultType="long">
			select review_seq.nextval from dual
		</selectKey>
		insert into tbl_review( r_no,r_title,r_content,id)
		values(#{r_no},#{r_title},#{r_content},#{id})
	</insert>

	<select id="read" resultType="domain.ReviewVO">
      select * from tbl_review where r_no= #{r_no}
   </select>

	<delete id="delete">
      delete from tbl_review where r_no= #{r_no}
   </delete>

	<update id="update">
      update tbl_review set r_title=#{r_title}, r_content=#{r_content}, r_updatetime=sysdate
      where r_no=#{r_no}
   </update>
</mapper>



