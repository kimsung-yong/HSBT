    <insert id="insert">
		insert into tbl_review( rNo,rTitle,rContent,uNo,rRegtime,rUpdatetime)
		values(review_seq.nextval,#{rTitle},#{rContent},#{uNo},#{rRegtime},#{rUpdatetime})
	</insert>

    <insert id="insertSelectKey">
        <selectKey keyProperty="rNo" order="BEFORE" resultType="long">
            select review_seq.nextval from dual
        </selectKey>
        insert into tbl_review( rNo,rTitle,rContent,uNo,rRegtime,rUpdatetime)
        values(#{rNo},#{rTitle},#{rContent},#{uNo},#{rRegtime},#{rUpdatetime})
    </insert>

    <select id="read" resultType="domain.ReviewVO">
		select * from tbl_review where rNo= #{rNo}
	</select>

    <delete id="delete">
		delete from tbl_review where rNo= #{rNo}
	</delete>

    <update id="update">
		update tbl_review
		set rTitle=#{rTitle}, rContent=#{rContent}, rUpdatetime=sysdate
		where rNo=#{rNo}
	</update>
</mapper>




